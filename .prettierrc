{
  "useTabs": true,
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 120,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "useTabs": true,
        "tabWidth": 4,
        "parser": "php"
      }
    },
    {
      "files": "*.blade.php",
      "options": {
        "useTabs": true,
        "tabWidth": 4,
        "parser": "html"
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "useTabs": false,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true
      }
    },
    {
      "files": ["*.json", "*.css", "*.scss"],
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    }
  ]
}